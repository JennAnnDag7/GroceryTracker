@model GroceryTracker.ViewModels.AddGroceryCategoryViewModel

<h1>Add Grocery Category</h1>

<form asp-controller="Grocery Category" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input class="form-control" asp-for="CategoryName" />
        <span asp-validation-for="CategoryName"></span>
    </div>
    <input type="submit" value="Add Grocery Category" />

</form>