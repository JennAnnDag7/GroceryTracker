<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var GroceryItem in ViewBag.cheeses)
    {
        <input type="checkbox" name="cheeseIds" id="@GroceryItem.ID" value="@GroceryItem.ID" />
        <label for="@GroceryItem.ID">@GroceryItem.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Item(s)" />
</form>
